<div class='row expansion-wrapper'>
  <%= form_for @expansion do |f| %>
    <% if @expansion.errors.any? %>
      <ul>
        <% @expansion.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <%-end-%>
      </ul>
    <%-end-%>
    <%= f.label :set_name %>
    <%= f.text_field :set_name, placeholder: "Enter the name here" %>
    <%= f.label :set_size %>
    <%= f.text_field :set_size, placeholder: "Set size, numbers only" %>
    <%= f.label :set_desc, "Set description" %>
    <p>Use the description to describe keywords to save space in the rules text. </p>
    <%= f.text_area :set_desc, size: "15x7", placeholder: "Enter the set description here" %>
    <%= f.submit "Create", class: "button radius" %>
  <%-end-%>
</div>