<div class='row'>
  <h2><%= @expansion.set_name %></h2>
  <p>This set contains  of <%=@expansion.set_size%></p>
  <p><%= link_to 'Update', edit_expansion_path(@expansion) %> this set here.</p>
  <p><%= link_to 'Add a Card', new_expansion_card_path(@expansion), class: 'button tiny radius' %></p>
  <div class='small-3 columns'>
    <ul>
      <% @cards.each do |card| %>
        <li>
          <%= link_to card.name, expansion_card_path(@expansion, card) %>  <%= card.mana_cost %><br>
          <%= card.main_type %> 
          <% unless card.sub_type.empty? %>
            <%= card.sub_type %>
          <%-end-%><br>
          <%= card.rules_text %><br>
          <% if card.main_type.include?("Creature") %>
            <%= card.power %>/<%= card.toughness %>
          <%-end-%>
        </li>
        <%-end-%>
    </ul>
  </div>
</div>